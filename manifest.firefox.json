{
    "manifest_version": 3,
    "name": "X-Scraper",
    "version": "0.1.7",
    "description": "Scrape X (Twitter) threads to clipboard.",
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon.svg",
            "48": "icons/icon.svg",
            "128": "icons/icon.svg"
        }
    },
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "shared/scraper.js"
            ],
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "xscraper@manusco.com",
            "strict_min_version": "109.0"
        }
    }
}